# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = false

[*.{html,js,json,scss,sass,css}]
charset = utf-8

[*.{js,scss,sass,css}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[{package.json}]
indent_style = space
indent_size = 2